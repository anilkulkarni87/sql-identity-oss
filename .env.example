# Image pinning (used by docker-compose.prod.yml)
IDR_IMAGE_REGISTRY=ghcr.io/anilkulkarni87/sql-identity-resolution
IDR_IMAGE_TAG=0.5.1

# Ports
IDR_API_PORT=8000
IDR_UI_PORT=3000

# API runtime
IDR_DATABASE=/data/idr.duckdb
IDR_CORS_ORIGINS=http://localhost:3000
IDR_ALLOW_INSECURE_DEV_AUTH=false
IDR_CONNECTION_IDLE_TTL_SECONDS=3600
# Optional: dotted class path for enterprise session store backend
IDR_SESSION_STORE_CLASS=
IDR_REDIS_URL=
IDR_REDIS_NAMESPACE=idr:session_store
IDR_PIP_EXTRAS=api,duckdb,enterprise

# UI runtime
VITE_API_BASE_URL=/api
VITE_ALLOW_INSECURE_DEV_AUTH=false

# Optional enterprise auth settings
IDR_AUTH_ISSUER=
IDR_AUTH_AUDIENCE=account
IDR_AUTH_JWKS_URL=
IDR_AUTH_JWKS_TTL_SECONDS=300
IDR_AUTH_JWKS_HTTP_TIMEOUT_SECONDS=5
